<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>SimpleShop</display-name>
	<context-param>
		<description>
  	Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>
	<listener>
		<listener-class>
			org.vaadin.simpleshop.SimpleShopContextListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>Simples Shop</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<description>
  		Vaadin application class to start</description>
			<param-name>application</param-name>
			<param-value>org.vaadin.simpleshop.SimpleshopApplication</param-value>
		</init-param>
	</servlet>
	
	<servlet>
		<servlet-name>I18NServlet</servlet-name>
		<servlet-class>org.vaadin.simpleshop.InternationalizationServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Simples Shop</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>I18NServlet</servlet-name>
		<url-pattern>/I18NServlet/*</url-pattern>
	</servlet-mapping>


</web-app>